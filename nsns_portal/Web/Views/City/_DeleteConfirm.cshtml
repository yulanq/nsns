@model City

<form id="cityForm">
    <input type="hidden" asp-for="CityID" />
    <div class="form-group">
        Are you sure you want to delete this city?
        <div style="margin-top:20px; margin-bottom: 20px">City Name: @Model.Name</div>
       @*  <input type="text" asp-for="Name" class="form-control" required /> *@
    </div>
    <button type="button" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;" onclick="deleteCity(@Model.CityID)">Delete</button>
    <a href="/City/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>