@model City



<form id="cityForm">
    <table style="border-collapse: collapse;  text-align: left;">
        <tr>
            <td style="padding: 8px; width: 40%"><label for="name">City Name:</label></td>
            <td style="padding: 8px; width: 60%">
                <input type="text" name="Name" placeholder="City Name" value="@Model.Name"  style="width: 100%;" required />
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: left; padding: 20px 16px 16px 8px;">
                <button onclick="saveCity()" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Add City</button>
                <a href="/City/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
                
            </td>
        </tr>
    </table>
</form>
