
@model Core.Models.Staff

<h2 style="margin-bottom: 30px;">Confirm Delete</h2>
<p>Are you sure you want to delete this staff member?</p>

<div>
    <p><strong>Name：</strong> @Model.Name</p>
    <p><strong>Email：</strong> @Model.Email</p>
    <p><strong>Role：</strong> @Model.Role</p>
  
</div>

<form method="post" action="/Staff/DeleteConfirmed" method="post">
    <input type="hidden" name="userId" value="@Model.UserID" />
    <button type="submit" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Confirm Delete</button>
    <a href="/Staff/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>