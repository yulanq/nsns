@model Payment

<h2>Confirm Delete</h2>
<p>Are you sure you want to delete this payment?</p>

<div>
    <p><strong>Parent:</strong> @Model.Parent.Name</p>
    <p><strong>Package:</strong> @Model.PaymentPackage.Title</p>
    <p><strong>Amount:</strong> $@Model.Amount</p>
</div>

<form method="post" action="/Payment/DeleteConfirmed">
    <input type="hidden" name="PaymentID" value="@Model.PaymentID" />
    <button type="submit" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Confirm Delete</button>
    <a href="/Payment/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>
