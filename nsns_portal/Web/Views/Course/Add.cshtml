<h2>Add Course</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="SpecialtyID">Select Specialty</label>
        <select id="SpecialtyID" name="SpecialtyID" class="form-control" onchange="fetchCoaches(this.value)">
            <option value="">-- Select Specialty --</option>
            @foreach (var specialty in ViewBag.SpecialtyList)
            {
                <option value="@specialty.Value">@specialty.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="CoachID">Select Coach</label>
        <select id="CoachID" name="CoachID" class="form-control">
            <option value="">-- Select Coach --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Title">Course Title</label>
        <input id="Title" name="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea id="Description" name="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="HourlyCost">Hourly Cost</label>
        <input id="HourlyCost" name="HourlyCost" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label for="IsActive">Active</label>
        <input id="IsActive" name="IsActive" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>




    @if (!ViewData.ModelState.IsValid)

    {

        foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))

        {
            <div class="alert alert-danger">
                @error.ErrorMessage
            </div>
        }

    }
