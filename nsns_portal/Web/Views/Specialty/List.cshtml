@model IEnumerable<Core.ViewModels.SpecialtyWithDeleteViewModel>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/specialties.js"></script>

<h1>Manage Specialties</h1>

<a href="#" onclick="loadAddForm()" style="display: inline-block; margin-bottom: 20px; color: #007bff; text-decoration: none;">Add Specialty</a>

<table style="border-collapse: collapse; width: 50%; text-align: left;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="padding: 8px; border: 1px solid #ddd;">#</th>
            <th style="padding: 8px; border: 1px solid #ddd;">Specialty Name</th>
            <th style="padding: 8px; border: 1px solid #ddd;">Description</th>
            <th style="padding: 8px; border: 1px solid #ddd;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
        int index = 1;
        foreach (var specialtyWithDelete in Model)
        {
                <tr id="row-@specialtyWithDelete.Specialty.SpecialtyID">
                <td style="padding: 8px; border: 1px solid #ddd;">@index</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@specialtyWithDelete.Specialty.Title</td>
                    <td style="padding: 8px; border: 1px solid #ddd;">@specialtyWithDelete.Specialty.Description</td>
                <td style="padding: 8px; border: 1px solid #ddd;">
                        <a href="#" onclick="loadEditForm(@specialtyWithDelete.Specialty.SpecialtyID)" style="margin-left: 10px; color: #007bff; text-decoration: none;">Edit</a>
                        @if (specialtyWithDelete.CanDelete)
                        {
                            <a href="#" onclick="loadDeleteSpecialtyConfirm(@specialtyWithDelete.Specialty.SpecialtyID)" style="margin-left: 10px; color: #007bff; text-decoration: none;">Delete</a>
                        }
                    </td>
            </tr>
                index++;
        }
        }

    </tbody>
</table>




<!-- Modal Popup -->
<div id="specialtyModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Specialty</h5>
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- The Add/Edit form will be loaded here dynamically -->
                <!-- The Delete Confirm popup will be loaded here dynamically -->
            </div>
        </div>
    </div>
</div>

