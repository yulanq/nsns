

@model Core.Models.Activity



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Activity";
}

<h2>Edit Activity</h2>


<form asp-action="Edit" method="post">
    <input type="hidden" name="activityId" value="@Model.ActivityID" />

    <table style="border-collapse: collapse; width: 80%; text-align: left;">
        <tr>
            <td style="padding: 8px;"><label for="Title">Title:</label></td>
            <td style="padding: 8px;">
                <input type="text" name="title" value="@Model.Title" placeholder="Activity Title" style="width: 100%;" required />
            </td>
        </tr>

        <tr>
            <td style="padding: 8px;"><label for="Description">Description:</label></td>
            <td style="padding: 8px;">
                <textarea name="description" placeholder="Enter activity description" style="width: 100%;" rows="3">@Model.Description</textarea>
            </td>
        </tr>

        <tr>
            <td style="padding: 8px;"><label for="Address">Address:</label></td>
            <td style="padding: 8px;">
                <input type="text" name="address" value="@Model.Address" placeholder="Activity Address" style="width: 100%;" />
            </td>
        </tr>

        <tr>
            <td style="padding: 8px;"><label for="MaxCapacity">Max Capacity:</label></td>
            <td style="padding: 8px;">
                <input type="number" name="maxCapacity" value="@Model.MaxCapacity" placeholder="Enter max participants" style="width: 100%;" />
            </td>
        </tr>

        <tr>
            <td style="padding: 8px;"><label for="ScheduledAt">Scheduled Date:</label></td>
            <td style="padding: 8px;">
                <input type="datetime-local" name="scheduledAt"
                       value="@(Model.ScheduledAt.HasValue ? Model.ScheduledAt.Value.ToString("yyyy-MM-ddTHH:mm") : "")"
                       style="width: 100%;" />
            </td>
        </tr>

        <tr>
            <td style="padding: 8px;"><label for="Cost">Cost ($):</label></td>
            <td style="padding: 8px;">
                <input type="hidden" name="cost" step="0.01" value="@Model.Cost" placeholder="Enter cost" style="width: 100%;" />
                @Model.Cost
            </td>
        </tr>

