
@model Core.Models.Activity

<h2 style="margin-bottom: 30px;">Confirm Delete</h2>
<p>Are you sure you want to delete this activity?</p>

<div>
    <p><strong>Name：</strong> @Model.Title</p>
    <p><strong>Description：</strong> @Model.Description</p>
    <p><strong>Address：</strong> @Model.Address</p>
    <p><strong>Max Capacity：</strong> @Model.MaxCapacity</p>
    <p><strong>Scheduled Date：</strong> @(Model.ScheduledAt.ToString("yyyy-MM-dd HH:mm") )</p>
    <p><strong>Cost：</strong> @(Model.Cost.ToString("C"))</p>
    <p><strong>Address：</strong> @Model.Address</p>
  @*   <p><strong>Is Active：</strong> @Model.IsActive</p> *@
  
</div>

<form method="post" action="/Activity/DeleteConfirmed" method="post">
    <input type="hidden" name="activityId" value="@Model.ActivityID" />
    <button type="submit" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Confirm Delete</button>
    <a href="/Activity/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>