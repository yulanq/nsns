@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add Coach";
}



    <h2>Add Coach</h2>


    <form method="post" action="/Coach/Add">
    

    <table style="border-collapse: collapse; width: 50%; margin-left: 0;">
        <tr>
            <td style="padding: 8px;"><label for="name">Name:</label></td>
            <td style="padding: 8px;"><input type="text" name="name" placeholder="Name" style="width: 100%;" /></td>
        </tr>
        <tr>
            <td style="padding: 8px;"><label for="gender">Gender:</label></td>
            <td style="padding: 8px;">
                <select name="gender" class="form-control" style="width: 100%;">
                    <option value="" selected>Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="N/A">N/A</option>
                </select>
            </td>
        </tr>
        <tr>
            <td style="padding: 8px;"><label for="specialtyId">Specialty:</label></td>
            <td style="padding: 8px;">
                <select name="specialtyId" class="form-control" style="width: 100%;">
                    <option value="" selected>Select Specialty</option>
                    @foreach (var specialty in ViewBag.SpecialtyList)
                    {
                        <option value="@specialty.Value">@specialty.Text</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td style="padding: 8px;"><label for="cityId">City:</label></td>
            <td style="padding: 8px;">
                <select name="cityId" class="form-control" style="width: 100%;">
                    <option value="" selected>Select City</option>
                    @foreach (var city in ViewBag.CityList)
                    {
                        <option value="@city.Value">@city.Text</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td style="padding: 8px;"><label for="email">Email:</label></td>
            <td style="padding: 8px;"><input type="email" name="email" placeholder="Email" style="width: 100%;" /></td>
        </tr>
        <tr>
            <td style="padding: 8px;"><label for="phone">Phone:</label></td>
            <td style="padding: 8px;"><input type="text" name="phone" placeholder="Phone" style="width: 100%;" /></td>
        </tr>
        <tr>
            <td style="padding: 8px;"><label for="wechat">WeChat:</label></td>
            <td style="padding: 8px;"><input type="text" name="wechat" placeholder="WeChat" style="width: 100%;" /></td>
        </tr>
        <tr>
            <td style="padding: 8px;"><label for="password">Password:</label></td>
            <td style="padding: 8px;"><input type="text" name="password" placeholder="Password" value="12345" style="width: 100%;" /></td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: left;  padding: 20px 16px 16px 8px;">
                <button type="submit" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Add Coach</button>
                <a href="/Coach/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>

            </td>
        </tr>
    </table>

    @if (!ViewData.ModelState.IsValid)
    {
        foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="alert alert-danger">
                @error.ErrorMessage
            </div>
        }
    }

    </form>


