<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NSNS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">NSNS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/List">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff/List">Staff</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Coach/List">Coach</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Course/List">Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Report">Report</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/User/Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center mt-4">
        <p>&copy; @DateTime.Now.Year - NSNS</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>