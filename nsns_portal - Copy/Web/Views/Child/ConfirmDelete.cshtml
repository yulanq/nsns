@model Core.Models.Child

<h2 style="margin-bottom: 30px;">Confirm Delete</h2>
<p>Are you sure you want to delete this child?</p>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Birth Date:</strong> @(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToString("yyyy-MM-dd") : "N/A")</p>
    <p><strong>Gender:</strong> @Model.Gender</p>
    <p><strong>City:</strong> @(Model.City != null ? Model.City.Name : "N/A")</p>
</div>

<form method="post" action="/Child/DeleteConfirmed">
    <input type="hidden" name="UserID" value="@Model.UserID" />
    <button type="submit" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Confirm Delete</button>
    <a href="/Child/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>
