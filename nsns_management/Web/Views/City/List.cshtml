<h1>Manage Cities</h1>

<a href="#" onclick="loadAddForm()" style="display: inline-block; margin-bottom: 20px; color: #007bff; text-decoration: none;">Add City</a>

<table style="border-collapse: collapse; width: 50%; text-align: left;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="padding: 8px; border: 1px solid #ddd;">#</th>
            <th style="padding: 8px; border: 1px solid #ddd;">City Name</th>
            <th style="padding: 8px; border: 1px solid #ddd;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
        int index = 1;
        foreach (var city in Model.Cities)
        {
            <tr id="row-@city.CityID">
                <td style="padding: 8px; border: 1px solid #ddd;">@index</td>
                <td style="padding: 8px; border: 1px solid #ddd;">@city.Name</td>
                <td style="padding: 8px; border: 1px solid #ddd;">
                    <a href="#" onclick="loadEditForm(@city.CityID)" style="margin-left: 10px; color: #007bff; text-decoration: none;">Edit</a>
                    
                    @if (!Model.UsedCityIds.Contains(city.CityID))
                    {
                        <a href="#" onclick="loadDeleteCityConfirm(@city.CityID)" style="margin-left: 10px; color: #007bff; text-decoration: none;">Delete</a>
                    }
                </td>
            </tr>
            index++;
        }
        }
    </tbody>
</table>

<!-- Modal Popup -->
<div id="cityModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">City</h5>
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- The Add/Edit form will be loaded here dynamically -->
                <!-- The Delete Confirm popup will be loaded here dynamically -->
            </div>
        </div>
    </div>
</div>

