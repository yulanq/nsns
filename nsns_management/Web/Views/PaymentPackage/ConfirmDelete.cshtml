@model PaymentPackage

<h2>Confirm Delete</h2>
<p>Are you sure you want to delete this package?</p>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Amount:</strong> $@Model.Amount</p>
</div>

<form method="post" action="/Child/DeleteParentConfirmed">
    <input type="hidden" name="PackageID" value="@Model.PackageID" />
    <button type="submit" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Confirm Delete</button>
    <a href="/PaymentPackage/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>