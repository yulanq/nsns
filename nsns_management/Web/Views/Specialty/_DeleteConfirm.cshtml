@model Specialty

<form id="specialtyForm">
    <input type="hidden" asp-for="SpecialtyID" />
    <div class="form-group">
        Are you sure you want to delete this specialty?
        <div style="margin-top:20px; margin-bottom: 20px">Specialty Name: @Model.Title</div>
       @*  <input type="text" asp-for="Name" class="form-control" required /> *@
    </div>
    <button type="button" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;" onclick="deleteSpecialty(@Model.SpecialtyID)">Delete</button>
    <a href="/Specialty/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>