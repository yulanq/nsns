@model Parent

<h2>Confirm Delete</h2>
<p>Are you sure you want to delete this parent?</p>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>WeChat:</strong> @Model.Wechat</p>
</div>

<form method="post" action="/Child/DeleteParentConfirmed">
    <input type="hidden" name="childId" id="ParentID" value="@ViewBag.ChildId" />
    <input type="hidden" name="parentchildId" id="ParentChildId" value="@ViewBag.ParentChildId" />
    <input type="hidden" name="parentId" value="@Model.ParentID" />
    

    <button type="submit" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Confirm Delete</button>
    <a href="/Child/ManageParents/@ViewBag.ChildId" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>