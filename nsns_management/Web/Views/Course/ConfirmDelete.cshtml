
@model Core.Models.Course

<h2 style="margin-bottom: 30px;">Confirm Delete</h2>
<p>Are you sure you want to delete this course?</p>

<div>
    <p><strong>Coach：</strong> @Model.Coach.Name</p>
    <p><strong>Title：</strong> @Model.Title</p>
    <p><strong>Description：</strong> @Model.Description</p>
    <p><strong>Hourly Cost：</strong> @Model.HourlyCost</p>
    <p><strong>Is Active：</strong> @Model.IsActive</p>
  
</div>

<form method="post" action="/Course/DeleteConfirmed" method="post">
    <input type="hidden" name="courseId" value="@Model.CourseID" />
    <button type="submit" style="background-color: #ff4d4d; color: white; border: none; padding: 5px 10px; cursor: pointer;">Confirm Delete</button>
    <a href="/Course/List" style="background-color: #ddd; color: black; text-decoration: none; padding: 5px 10px; border: 1px solid #ccc;">Cancel</a>
</form>